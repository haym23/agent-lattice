{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,

    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
