{
  "name": "@lattice/server",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "node --env-file=.env --watch --import tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node --env-file=.env --import tsx src/index.ts",
    "lint": "echo 'No linter configured'",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "pnpm --filter @lattice/runtime build && vitest run",
    "test:coverage": "pnpm --filter @lattice/runtime build && vitest run --coverage"
  },
  "dependencies": {
    "fastify": "^4.28.0",
    "@fastify/cors": "^9.0.0",

    "@lattice/ir": "workspace:*",
    "@lattice/compiler": "workspace:*",
    "@lattice/runtime": "workspace:*",
    "@lattice/prompts": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.0.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.16"
  }
}
