{
  "name": "agent-lattice",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "lint": "biome lint .",
    "format": "biome format .",
    "check": "biome check .",
    "fix": "biome check . --write",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "coverage": "pnpm -r --if-present test:coverage",
    "ci": "pnpm run check && pnpm run typecheck && pnpm run coverage",

    "web:dev": "cd apps/web && pnpm -r dev",
    "web:build": "cd apps/web && pnpm -r build",
    "web:check": "biome check apps/web",
    "web:lint": "biome lint apps/web",
    "web:format": "biome format apps/web",
    "web:fix": "biome check apps/web --write",
    "web:typecheck": "cd apps/web && pnpm -r typecheck",
    "web:test": "cd apps/web && pnpm -r test",

    "server:dev": "cd apps/server && pnpm -r dev",
    "server:build": "cd apps/server && pnpm -r build",
    "server:check": "biome check apps/server",
    "server:lint": "biome lint apps/server",
    "server:format": "biome format apps/server",
    "server:fix": "biome check apps/server --write",
    "server:typecheck": "cd apps/server && pnpm -r typecheck",
    "server:test": "cd apps/server && pnpm -r test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10"
  },
  "dependencies": {}
}
